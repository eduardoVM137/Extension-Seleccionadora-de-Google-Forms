{
    "manifest_version": 3,
    "name": "Google Forms Helper",
    "version": "1.0",
    "description": "Autom√°ticamente selecciona las respuestas correctas en Google Forms.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://docs.google.com/forms/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": { 
         
      }
    }
  }
  